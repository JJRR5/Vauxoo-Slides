<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <template id="services_page_template">
        <t t-call="website.layout">
            <div class="wrap">
                <div class="container">
                    <h1>Our services</h1>
                    <ul class="services">
                        <li>Cloud Hosting</li>
                        <li>Support</li>
                        <li>Ulimited space</li>
                    </ul>
                    <div class="oe_structure"/>
                </div>
            </div>
        </t>
    </template>
    <record id="services_page_final" model="website.page">
        <field name="name">Servcies Page Final</field>
        <field name="website_published" eval="True"/>
        <field name="url">/services</field>
        <field name="view_id" ref="services_page_template"/>
    </record>
    <record id="services_page_link" model="website.menu">
        <field name="name">Services</field>
        <field name="page_id" ref="services_page_template"/>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">99</field>
    </record>
</odoo>

<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <template id="index">
        <t t-call="website.layout">
            <title>Academy</title>
            <div class="oe_structure">
                <t t-foreach="teachers" t-as="teacher">
                    <p>
                        <a t-attf-href="/academy/render_teacher/{{ slug(teacher) }}">
                            <t t-esc="teacher.name"/>
                        </a>
                    </p>
                </t>
            </div>
        </t>
    </template>
    <template id="biography">
        <t t-call="website.layout">
        <title>Academy</title>
        <div class="oe_structure"/>
            <div class="oe_structure">
                <div class="container">
                    <h3 t-field="person.name"/>
                    <p>Last modified: <i t-field="person.write_date" t-options="{'widget': 'relative'}"/></p>
                    <div t-field="person.biography"/>
                </div>
            </div>
        </t>
    </template>
    <template id="products_item" inherit_id="website_sale.products_item">
        <xpath expr="//form/div[2]" position="after">
            <p t-esc="product.id" class="text-center"></p>
        </xpath>
    </template>
</odoo>
